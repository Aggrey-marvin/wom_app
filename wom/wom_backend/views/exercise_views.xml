<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="exercise_view_tree" model="ir.ui.view">
        <field name="name">exercise.tree</field>
        <field name="model">exercise</field>
        <field name="arch" type="xml">
            <tree string="Exercises">
                <field name="name"/>
                <field name="expected_duration"/>
                <field name="exercise_gif"/>
            </tree>
        </field>
    </record>
    <record id="exercise_view_form" model="ir.ui.view">
        <field name="name">exercise.view.form</field>
        <field name="model">exercise</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    
                </header>
                <sheet>
                    <group name="base">
                        <group name="info_1">
                            <field name="name"/>
                            <field name="expected_duration"/>
                        </group>
                        <group name="info_2">
                            <field name="exercise_image" widget="image" class="oe_avatar" nolabel="1"
                                style='padding-left: 15px; padding-bottom: 5px'/>
                            <group>
                                <field name="exercise_gif"/>
                            </group>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="exercise_action" model="ir.actions.act_window">
        <field name="name">Exercises</field>
        <field name="res_model">exercise</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                There are no exercises yet.
            </p>
            <p>
                Click 'New' to create a new Exercise
            </p>
        </field>
    </record>
</odoo>