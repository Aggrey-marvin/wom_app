<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="patient_view_tree" model="ir.ui.view">
        <field name="name">patient.tree</field>
        <field name="model">patient</field>
        <field name="arch" type="xml">
            <tree string="Patients">
                <field name="name"/>
                <field name="email"/>
                <field name="date_of_birth"/>
                <field name="doctor_id"/>
                <field name="address" optional="hide"/>
            </tree>
        </field>
    </record>
    <record id="patient_view_form" model="ir.ui.view">
        <field name="name">patient.view.form</field>
        <field name="model">patient</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    
                </header>
                <sheet>
                    <group name="base">
                        <group name="info_1">
                            <field name="name"/>
                            <field name="email"/>
                            <field name="date_of_birth"/>
                            <field name="doctor_id"/>
                            <field name="address"/>
                            <field name="age"/>
                            <field name="state" widget="badge" 
                                decoration-success="state == 'active'"
                                decoration-danger="state == 'in_active'"
                                />
                        </group>
                        <group name="info_2">
                            <field name="profile_picture" widget="image" class="oe_avatar" nolabel="1"
                                style='padding-left: 15px; padding-bottom: 5px'/>
                            <group>
                                <field name="gender"/>
                                <field name="height"/>
                                <field name="weight"/>
                            </group>
                        </group>
                    </group>
                    <notebook>
                        <page name="exercise_sessions" string="Exercise Sessions">
                            <field name="exercise_session_ids">
                                <tree>
                                    <field name="steps"></field>
                                    <field name="distance"></field>
                                    <field name="pain_score"></field>
                                    <field name="exercise_id"></field>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    <record id="patient_action" model="ir.actions.act_window">
        <field name="name">Patients</field>
        <field name="res_model">patient</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                There are no patients yet.
            </p>
            <p>
                Click 'New' to create a new Patient
            </p>
        </field>
    </record>
</odoo>