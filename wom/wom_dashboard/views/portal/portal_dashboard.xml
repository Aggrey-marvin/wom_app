<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="portal_my_home_inherit" inherit_id="portal.portal_my_home" name="My Portal Inherited">
        <xpath expr="*" position="replace">
            <html lang="en">
                <t t-call="wom_dashboard.portal_assets"/>
                <!-- [Body] Start -->

                <body data-pc-preset="preset-1" data-onboarding_scripts-sidebar-caption="true" data-pc-direction="ltr" data-pc-theme_contrast="" data-pc-theme="light">
                    <div class="o_portal_docs row g-2" style="display: none">
                        <div class="o_portal_doc_spinner spinner-border text-o-color-2 align-self-center mt-5"/>
                        <div t-if="portal_alert_category_enable" class="o_portal_category row g-2 mt-3" id="portal_alert_category"/>
                        <div t-if="portal_client_category_enable" class="o_portal_category row g-2 mt-3" id="portal_client_category"/>
                        <div t-if="portal_service_category_enable" class="o_portal_category row g-2 mt-3" id="portal_service_category"/>
                        <div t-if="portal_vendor_category_enable" class="o_portal_category row g-2 mt-3" id="portal_vendor_category"/>
                        <div class="o_portal_category row g-2 mt-3" id="portal_common_category">
                            <t t-call="portal.portal_docs_entry">
                                <t t-set="icon" t-value="'/portal/static/src/img/portal-addresses.svg'"/>
                                <t t-set="title">Addresses</t>
                                <t t-set="text">Add, remove or modify your addresses</t>
                                <t t-set="url" t-value="'/my/account'"/>
                                <t t-set="config_card" t-value="True"/>
                            </t>
                            <t t-call="portal.portal_docs_entry">
                                <t t-set="icon" t-value="'/portal/static/src/img/portal-connection.svg'"/>
                                <t t-set="title">Connection &amp; Security</t>
                                <t t-set="text">Configure your connection parameters</t>
                                <t t-set="url" t-value="'/my/security'"/>
                                <t t-set="config_card" t-value="True"/>
                            </t>
                        </div>
                    </div>
                    <!-- [ Pre-loader ] start -->
                    <div class="loader-bg">
                        <div class="loader-track">
                            <div class="loader-fill"></div>
                        </div>
                    </div>
                    <!-- [ Pre-loader ] End -->

                    <!-- [ Sidebar Menu ] start -->
                    <t t-call="wom_dashboard.portal_nav"/>

                    <!-- [ Sidebar Menu ] end --> <!-- [ Header Topbar ] start -->
                    <t t-call="wom_dashboard.portal_header"/>
                    <!-- [ Header ] end -->



                    <!-- [ Main Content ] start -->
                        <div class="pc-container dashboard-pc-container">
                            <div class="pc-content">
                                <!-- [ breadcrumb ] start -->
                                <div class="page-header">
                                <div class="page-block">
                                    <div class="row align-items-center">
                                    <div class="col-md-12">
                                        <ul class="breadcrumb">
                                            <li class="breadcrumb-item"><a href="/">Home</a></li>
                                            <li class="breadcrumb-item" aria-current="page">Dashboard</li>
                                        </ul>
                                    </div>
                                    <div class="col-md-12">
                                        <div class="page-header-title">
                                            <h2 class="mb-0">Dashboard</h2>
                                        </div>
                                    </div>
                                    </div>
                                </div>
                                </div>
                                <!-- [ breadcrumb ] end -->
                                <div class="row">
                                    <!-- [ sample-page ] start -->
                                    <div class="col-md-6 col-xl-4">
                                        <div class="card social-widget-card bg-primary">
                                        <div class="card-body">
                                            <h3 class="text-white m-0" t-out="patients"></h3>
                                            <span class="m-t-10">Patients</span>
                                            <i class="fas fa-clinic-medical"></i>
                                        </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6 col-xl-4">
                                        <div class="card social-widget-card bg-info">
                                        <div class="card-body">
                                            <h3 class="text-white m-0" t-out="len(active_patients)"></h3>
                                            <span class="m-t-10">Active Patients</span>
                                            <i class="fas fa-comment-medical"></i>
                                        </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6 col-xl-4">
                                        <div class="card social-widget-card bg-danger">
                                        <div class="card-body">
                                            <h3 class="text-white m-0" t-out="len(completed_sessions)"></h3>
                                            <span class="m-t-10">Sessions Completed</span>
                                            <i class="fas fa-calendar-check"></i>
                                        </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- [ Transactions Table ] start -->
                            <div class="col-sm-12">
                                <div class="card">
                                    <div class="card-header">
                                        <h4>Patients Sessions</h4>
                                        <p
                                        >Below are some of your most recent patient exercise Sessions</p
                                        >
                                    </div>
                                    <div class="card-body">
                                        <div class="dt-responsive table-responsive">
                                            <table id="base-style" class="table table-striped table-bordered nowrap">
                                                <thead>
                                                    <tr>
                                                        <th>Patient</th>
                                                        <th>Steps</th>
                                                        <th>Distance Walked</th>
                                                        <th>Pain Score</th>
                                                        <th>Exercise</th>
                                                        <th>Duration</th>
                                                        <th>Min Flex Angle</th>
                                                        <th>Max Flex Angle</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <t t-foreach="transactions" t-as="trans">
                                                        <tr>
                                                            <td t-out="trans['name']"/>
                                                            <td t-out="trans['fiscal_document_number']"/>
                                                            <td t-out="trans['date']"/>
                                                            <td t-out="trans['status']"/>
                                                        </tr>
                                                    </t>
                                                </tbody>
                                                <tfoot>
                                                    <tr>
                                                        <th>Patient</th>
                                                        <th>Steps</th>
                                                        <th>Distance Walked</th>
                                                        <th>Pain Score</th>
                                                        <th>Exercise</th>
                                                        <th>Duration</th>
                                                        <th>Min Flex Angle</th>
                                                        <th>Max Flex Angle</th>
                                                    </tr>
                                                </tfoot>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- [ Transactions Table  ] end -->
                        </div>
                    <!-- [ Main Content ] end -->

                    <footer class="pc-footer">
                    <div class="footer-wrapper container-fluid">
                        <div class="row">
                        <div class="col my-1">
                            <p class="m-0"
                            >WOM Dashboard &#9829; designed by <a href="https://sites.google.com/view/wearableosteoarthritismonitor/home" target="_blank">BSE24-2</a></p
                            >
                        </div>
                        </div>
                    </div>
                    </footer> <!-- Required Js -->
                    <t t-call="wom_dashboard.onboarding_scripts"/>
                </body>
                <!-- [Body] end -->
            </html>
        </xpath>
    </template>
</odoo>